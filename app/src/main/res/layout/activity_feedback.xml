<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#FDFDFD"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/white_circle_bg"
        android:padding="8dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:tint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Your Experience"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:numStars="5"
        android:stepSize="1.0"
        android:progressTint="#FFD700"
        android:secondaryProgressTint="#FFD700" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="What should we upgrade or change?"
        android:layout_marginTop="40dp"
        android:textColor="#666666"/>

    <EditText
        android:id="@+id/etFeedbackSuggestions"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_border"
        android:gravity="top"
        android:hint="Tell us how we can improve..."
        android:padding="12dp"
        android:inputType="textMultiLine"
        android:textColor="?attr/colorOnSurface"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmitFeedback"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_3d_rounded"
        android:text="Submit Feedback"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="#8B0000" />

</LinearLayout>